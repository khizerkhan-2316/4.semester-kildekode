
@{
    ViewBag.Title = "Index";
}


<h2>Countries</h2>


@using (Html.BeginForm("Index", "Exercise1", FormMethod.Get))
{
    @Html.DropDownList("countries", ViewBag.countries as SelectList, new { @class = "form-control"});
    <button style="margin-top: 10px; margin-bottom: 10px;" class="btn btn-primary" type="submit" value="Submit">Show country code</button>

}

@if (ViewBag.CountryCode != null)
{
    <strong>Country code: </strong>@ViewBag.CountryCode
    <br/>
}

<br />

@using (Html.BeginForm("Index", "Exercise1", FormMethod.Post))
{
    @Html.Label("Country");
    <br />

    @Html.TextBox("Country", "", new { @class = "form-control" })
    <br />

    <br />

    @Html.Label("Code");
    <br />

    @Html.TextBox("Code", "", new { @class = "form-control" })

    <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Add</button>
}