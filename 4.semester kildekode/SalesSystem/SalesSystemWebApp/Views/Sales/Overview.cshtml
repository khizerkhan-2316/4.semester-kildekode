
@{
    ViewBag.Title = "Overview";
}


@model SalesSystemWebApp.ViewModels.SalesViewModel


@Html.Partial("_PageHeading", "Salgsoverblik")




<table style="margin-top: 20px;" class="table table-bordered">
    @Html.Partial("_TableHeader", new List<string> { "Salgs ID", "Total pris:", "Detaljer", "Slet salg" })

    @foreach (DataTransferObjects.Models.SaleDto sale in Model.Sales)
    {

        @Html.Partial("_Sale", sale)

    }
</table>


<h5 style="margin-top: 20px;">Antal Salg: @Model.Sales.Count</h5>
