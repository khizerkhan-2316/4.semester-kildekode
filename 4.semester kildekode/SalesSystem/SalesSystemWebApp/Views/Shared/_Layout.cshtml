<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Salgs system</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark fixed-top bg-dark">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            </button>
            <a class="navbar-brand" href="/">Sales System</a>
            <div class="navbar-collapse collapse" id="navbarSupportedContent">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item"><a href="/Products" class="nav-link">Produkter</a></li>
                    <li class="nav-item"><a href="/Categories" class="nav-link">Kategorier</a></li>
                    <li class="nav-item"><a href="/Sales" class="nav-link">Foretag salg</a></li>
                    <li class="nav-item"><a href="/Sales/Overview" class="nav-link">Salgsoverblik</a></li>
                    <li class="nav-item"><a href="/Feeds" class="nav-link">Feeds</a></li>


                </ul>



            </div>
        </div>
    </nav>
    <div class="container body-content" id="root-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sales system</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
